# Component schema page - title and content from frontmatter/body
---
layout: base.liquid
---
<article class="spectrum-Typography">
  <h1 class="spectrum-Heading spectrum-Heading--sizeXL">{{ title }}</h1>
  {% if documentationUrl %}
  <p class="spectrum-Body spectrum-Body--sizeS">
    <a href="{{ documentationUrl }}" class="spectrum-Link">Spectrum docs</a>
  </p>
  {% endif %}
  <div class="spectrum-Body">
    {{ content }}
  </div>
</article>
