    "@spectrum-web-components/tooltip": "^0.49.0",
    "@spectrum-web-components/action-button": "^0.49.0",
    "@spectrum-css/tokens": "^15.0.0",
    "fuse.js": "^7.0.0",
    "prism-themes": "^1.9.0",
    "markdown-it": "^14.0.0",
    "markdown-it-prism": "^2.3.0"
  },
  "devDependencies": {
